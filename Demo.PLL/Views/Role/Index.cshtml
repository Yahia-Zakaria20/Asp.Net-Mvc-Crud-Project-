@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>
<br />
<a class="btn btn-primary rounded" asp-controller="Role" asp-action="Create">Create New Role</a>
<br />

<div class="row justify-content-center align-items-center mt-4">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="name" placeholder="Search By name">
        </div>
        <div class="col-4">
            <button type="submit" class="btn btn-success">Search</button>
        </div>
    </form>
</div>
<br>



@if (Model?.Count() > 0)
{
    <table class="mt-4 table table-striped  table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(r => r.Id)</th>
                <th>@Html.DisplayNameFor(r => r.RoleName)</th>
               

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id </td>
                    <td>@role.RoleName </td>

                    <partial name="_ButtonsPartial" model="@role.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h3 class="alert alert-warning">There Is No Roles :(</h3>
    </div>
}


