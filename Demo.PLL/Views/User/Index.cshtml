@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>
<br />


<div class="row justify-content-center align-items-center mt-4">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="Email" placeholder="Search By Email">
        </div>
        <div class="col-4">
            <button type="submit" class="btn btn-success">Search</button>
        </div>
    </form>
</div>
<br>



@if (Model?.Count() > 0)
{
    <table class="mt-4 table table-striped  table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(u => u.Id)</th>
                <th>@Html.DisplayNameFor(e => e.UserName)</th>
                <th>@Html.DisplayNameFor(e => e.FName)</th>
                <th>@Html.DisplayNameFor(e => e.LName)</th>
                <th>@Html.DisplayNameFor(e => e.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(e => e.Email)</th>
                <th>@Html.DisplayNameFor(e => e.Roles)</th>
                
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                    <td>@User.Id </td>
                    <td>@User.UserName </td>
                    <td>@User.FName </td>
                    <td>@User.LName</td>
                    <td>@User.PhoneNumber</td>
                    <td>@User.Email </td>
                    <td>@string.Join(",", @User.Roles);</td>
                    
                   
                    <partial name="_ButtonsPartial" model="@User.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h3 class="alert alert-warning">There Is No Users :(</h3>
    </div>
}


