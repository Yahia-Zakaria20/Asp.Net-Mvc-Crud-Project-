@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>ForgetPassword</h1>


<form asp-action="SendEmailResetPassword">
	<div asp-validation-summary="ModelOnly"></div>
	<div class="form-group">
		<input class="text email" asp-for="Email" placeholder="Email" required="">
		<span asp-validation-for="Email"></span>
	</div class="form-group">
	<input type="submit" value="SendEmailResetPassword">
</form>



@section ValidationSection {
	<partial name="_ValidationScriptsPartial" />
}