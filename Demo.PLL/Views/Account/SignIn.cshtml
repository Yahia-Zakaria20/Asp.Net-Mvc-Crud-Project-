@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>SignIn</h1>


<form asp-action="SignIn">
	<div asp-validation-summary="All"></div>
	<div class="form-group">
		<input class="text email" asp-for="Email" placeholder="Email" required="">
		<span asp-validation-for="Email"></span>
	</div class="form-group">
	<div>
		<input class="text" asp-for="Password" placeholder="Password" required="">
		<span asp-validation-for="Password"></span>
	</div>
	<div class="wthree-text">
		<label class="anim">
			<input asp-for="RememberMe" class="checkbox" required="">
			<span>Remember Me</span>
		</label>
		<div class="clear"> </div>
	</div>
	
	<input type="submit" value="SIGNIN">
</form>
<p>Dont have an Account? <a asp-action="SignUp">Register Now!</a></p>
<p>You Forget Password?<a asp-action="ForgetPassword"> Reset Password</a></p>



@section ValidationSection {
	<partial name="_ValidationScriptsPartial" />
}

